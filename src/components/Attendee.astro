---
const { p } = Astro.props;
---

<div class="mb-4 py-3 text-gray-600 border px-3 border-zermaBlue rounded-lg">
  <div class="flex flex-col mb-4">
    <div class="text-lg text-zermaBlue mr-2">{p.name}</div>
    <div class="text-gray-400 text-sm">({p.email})</div>
  </div>
  <div class="mb-4">
    Persons: {p.pax}
  </div>
  {
    p.arrDate && (
      <div class="flex items-center justify-between text-gray-600 text-base">
        <div>
          {p.arrDate} to {p.depDate}
        </div>
      </div>
    )
  }
</div>
